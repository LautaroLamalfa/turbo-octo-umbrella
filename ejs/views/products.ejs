<!DOCTYPE html>
<html lang="en">
    <%- include("templates/head", {}) %>
    <body>
        <div style="background-color: rgb(94, 97, 238)">
            <header style="background-color: rgb(218, 218, 218)">
                <h1 style="text-align: center; padding: 40px 0;color:black; font-size: 2em"> Los productos </h1>
            </header>
        
            <div>
                <table class="table table-bordered">
                    <thead style="background-color: rgb(122, 57, 207)">
                        <tr>
                            <th style="text-align:center">Nombre</th>
                            <th style="text-align:center">Precio</th>
                            <th style="text-align:center">Imagen</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: rgb(240, 100, 8)">
                        <% data.forEach(function(pr){ %>
                                <tr>
                                    <td style="text-align:center; padding: 20px"><%= pr.name %></td>
                                    <td style="text-align:center; padding: 20px"><%= pr.price %></td>
                                    <td style="text-align:center; padding: 20px"><img src=<&= pr.image & alt="icono"></td>
                                </tr>
                            <%  }) %>
                    </tbody>
                </table>
            </div>
                
            <a href="http://localhost:8081/" style="margin-bottom: 5px;" class="btn btn-info"> Agregar un producto</a>
            
            <footer style="background-color: rgb(218, 218, 218)">
                <h3 style="text-align: center; padding: 40px 0;color:black; margin-top: 120px">Express y handlebars</h3>
            </footer>
        </div>
    </body>
</html>

